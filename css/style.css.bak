:root {
  --azul: #143a5c;
  --laranja: #ff7a18;
  --amarelo: #ffcc33;
  --fundo: #f5f7fa;
}

body {
  font-family: 'Segoe UI', Arial, sans-serif;
  margin: 0;
  background: var(--fundo);
  color: #333;
}

.topo {
  background: white;
  border-bottom: 4px solid var(--azul);
  padding: 15px 10%;
}

.titulo h1 {
  margin: 0;
  color: var(--azul);
  font-size: 2em;
}


nav a {
  margin-right: 15px;
  text-decoration: none;
  color: var(--azul);
  font-weight: 600;
  padding-bottom: 5px;
}

nav a:hover {
  color: var(--laranja);
  border-bottom: 2px solid var(--laranja);
}

main {
  padding: 50px 10%;
}

.destaque {
  background: white;
  border-left: 6px solid var(--laranja);
  padding: 30px;
  border-radius: 14px;
  margin-bottom: 40px;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
  gap: 25px;
}

.card {
  background: white;
  padding: 25px;
  border-radius: 18px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  text-align: center;
  font-size: 1.1em;
  transition: transform 0.2s ease;
}

.card:hover {
  transform: translateY(-5px);
}

footer {
  text-align: center;
  padding: 25px;
  background: var(--azul);
  color: white;
  margin-top: 60px;
}

.botao {
  background: var(--laranja);
  color: white;
  padding: 10px 18px;
  border-radius: 10px;
  text-decoration: none;
  font-weight: bold;
}

.botao:hover {
  background: var(--amarelo);
  color: #333;
}


.marca {
  display: flex;
  align-items: center;
  gap: 15px;
}

.texto-marca h1 {
  margin: 0;
  color: var(--azul);
  font-size: 2em;
}

.texto-marca p {
  margin: 0;
  color: #555;
  font-size: 1em;
}


.barra-topo {
  display: flex;
  align-items: center;
  gap: 25px;
}

.logo {
  height: 150px;
  flex-shrink: 0;
}

.bloco-texto h1 {
  margin: 0;
  color: var(--azul);
  font-size: 2em;
}

.bloco-texto p {
  margin: 5px 0 8px;
  color: var(--azul);
  font-style: italic;
  font-weight: 500;
  font-size: 1.5em;
}

.menu {
  display: flex;
  flex-wrap: wrap;
  gap: 18px;
  font-size: 1.2em;
}

.menu a {
  text-decoration: none;
  color: #000;
  font-weight: 600;
}

.menu a:hover {
  color: var(--laranja);
  border-bottom: 2px solid var(--laranja);
}
